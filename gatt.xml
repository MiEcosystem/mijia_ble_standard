<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<!--Custom BLE GATT-->
<gatt gatt_caching="false" generic_attribute_service="true" header="gatt_db.h" name="Custom BLE GATT" out="gatt_db.c" prefix="gattdb_">
  
  <!--Generic Access-->
  <service advertise="false" name="Generic Access" requirement="mandatory" sourceId="org.bluetooth.service.generic_access" type="primary" uuid="1800">
    <informativeText>Abstract: The generic_access service contains generic information about the device. All available Characteristics are readonly. </informativeText>
    
    <!--Device Name-->
    <characteristic id="device_name" name="Device Name" sourceId="org.bluetooth.characteristic.gap.device_name" uuid="2A00">
      <informativeText/>
      <value length="20" type="utf-8" variable_length="true">standard demo</value>
      <properties const="false" const_requirement="optional" read="true" read_requirement="mandatory"/>
    </characteristic>
  </service>
  
  <!--Mi-->
  <service advertise="false" name="Mi" requirement="mandatory" sourceId="custom.type" type="primary" uuid="FE95">
    <informativeText>Custom service</informativeText>
    
    <!--Version-->
    <characteristic id="version" name="Version" sourceId="custom.type" uuid="0004">
      <informativeText>Custom characteristic</informativeText>
      <value length="20" type="user" variable_length="true">0x00</value>
      <properties read="true" read_requirement="optional"/>
    </characteristic>
    
    <!--Control Point-->
    <characteristic id="ctrlp" name="Control Point" sourceId="custom.type" uuid="0010">
      <informativeText>Custom characteristic</informativeText>
      <value length="4" type="user" variable_length="false">0x00</value>
      <properties notify="true" notify_requirement="optional" write_no_response="true" write_no_response_requirement="optional"/>
    </characteristic>
    
    <!--Standard Auth-->
    <characteristic id="std_auth" name="Standard Auth" sourceId="custom.type" uuid="0019">
      <informativeText>Custom characteristic</informativeText>
      <value length="20" type="user" variable_length="true">0</value>
      <properties notify="true" notify_requirement="mandatory" write_no_response="true" write_no_response_requirement="mandatory"/>
    </characteristic>
    
    <!--OTA control point-->
    <characteristic id="ota_ctrlp" name="OTA control point" sourceId="custom.type" uuid="0017">
      <informativeText>Custom characteristic</informativeText>
      <value length="20" type="user" variable_length="true"/>
      <properties notify="true" notify_requirement="optional" write="true" write_requirement="optional"/>
    </characteristic>
    
    <!--OTA data-->
    <characteristic id="ota_data" name="OTA data" sourceId="custom.type" uuid="0018">
      <informativeText>Custom characteristic</informativeText>
      <value length="20" type="user" variable_length="true"/>
      <properties notify="true" notify_requirement="optional" write_no_response="true" write_no_response_requirement="optional"/>
    </characteristic>
  </service>
</gatt>
